    <Button
        android:id="@+id/btnSok"
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnProfile"
        android:layout_marginTop="12dp"
        android:background="@drawable/mybutton"
        android:text="Sök"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="28dp" />

    <Button
        android:id="@+id/btnAnnons"
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/btnSok"
        android:background="@drawable/mybutton"
        android:text="Mina Annonser"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="421dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:background="@drawable/mybutton"
        android:text="Inställningar"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="66dp" />

    <Button
        android:id="@+id/btnMeddelande"
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:background="@drawable/mybutton"
        android:drawableTop="@drawable/messageiconvalues"
        android:text="Meddelande"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/btnFavoriter"
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:background="@drawable/mybutton"
        android:text="Favoriter"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="421dp" />



