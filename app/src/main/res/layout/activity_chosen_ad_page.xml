<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.filip.unibook.ChosenAdPageActivity">

    <EditText
        android:id="@+id/etchosenAdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="58dp" />

    <EditText
        android:id="@+id/etchosenAdPris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/etchosenAdTitle"
        tools:layout_editor_absoluteX="58dp" />

    <EditText
        android:id="@+id/etchosenAdInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/etchosenAdPris"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/etchosenAdISDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/etchosenAdInfo"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/etchosenAdProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/etchosenAdISDN"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/etchosenAdCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/etchosenAdProgram"
        tools:layout_editor_absoluteX="49dp" />

    <ImageView
        android:id="@+id/ivchosenAdImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="176dp" />

    <Button
        android:id="@+id/btnchosenAdUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Updatera information"
        app:layout_constraintTop_toBottomOf="@+id/etchosenAdCourse"
        tools:layout_editor_absoluteX="58dp" />
</android.support.constraint.ConstraintLayout>
