        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewBooks">

    </LinearLayout>

    <ListView
        android:id="@+id/listViewAllAds"
        android:layout_width="357dp"
